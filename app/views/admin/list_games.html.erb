<h2>All Games</h2>
<p><%= link_to "Add a Game", :action => "new_game" %></p>
<table>
<% for game in @games %>
	<tr class="<%= cycle('even','odd') %>">
		<td><%= raw(game) %></td>
		<td><%= game.visitor_score %> - <%= game.home_score %></td>
		<td><%= game.complete %></td>
		<td><%= game.game_time.to_s(:short) %> -- <%= link_to "Edit", :action => "edit_game", :id => game %></td>
	</tr>
<% end %>
</table>
